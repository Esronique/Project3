@{
    ViewBag.Title = "Home Page";
}





<div id="mycarousel" class="carousel slide" data-ride="carousel">

    <ol class="carousel-indicators">
        <li data-target="#mycarousel" data-slide-to="0" class="active"></li>
        <li data-target="#mycarousel" data-slide-to="1"></li>
        <li data-target="#mycarousel" data-slide-to="2"></li>
    </ol>

    <div class="carousel-inner" role="listbox">

        <div class="item active">

            <img src="~/images/exam.png" width="1000" style="margin:auto" />
            <div class="carousel-caption">
                <h3 style="color:black">Past papers</h3>
            </div>

        </div>

        <div class="item">

            <img src="~/images/pdf.jpg" width="1000" style="margin:auto" />
            <div class="carousel-caption">
                <h3 style="color:black">PDF books</h3>
            </div>

        </div>

        <div class="item">

            <img src="~/images/summaries.jpg" width="1000" style="margin:auto" />
            <div class="carousel-caption">
                <h3 style="color:black">Book summaries</h3>
            </div>

        </div>

    </div>

    <a class="left carousel-control" href="#mycarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>

    <a class="right carousel-control" href="#mycarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>

</div>




<div>
    <hr/>
    <br />
    <br />
    <div class="row">
        <div class="col-md-4">
            <h2>UPLOAD NEW DOCUMENTS</h2>
            <img src="~/images/upload.jpeg" alt="upload logo" width="80">
            <p>
                Login and click on the documents button in the navigation bar.
                Click on the upload button on the documents page and select the document from your folders.
            </p>

        </div>
        <div class="col-md-4">
            <h2>DOWNLOAD DOCUMENTS</h2>
            <img src="~/images/download.png" alt="download logo" width="80">
            <p>
                Login and click on the documents button in the navigation bar.
                Click on the document that you would like to download.
                Click on the download button on the details page.
            </p>

        </div>
        <div class="col-md-4">
            <h2>SEARCH FOR DOCUMENTS</h2>
            <img src="~/images/searchdoc.jpg" alt="search logo" width="80">
            <p>
                Login and click on the documents button in the navigation bar.
                Type the name of the document in the search bar.
            </p>

        </div>
    </div>
</div>

<hr />
<br />
<br />

<div id="mycarousel" class="carousel slide" data-ride="carousel">

    <ol class="carousel-indicators">
        <li data-target="#mycarousel" data-slide-to="0" class="active"></li>

    </ol>

    <div class="carousel-inner" role="listbox">

        <div class="item active">

            <img src="~/images/picture.jpg" width="1000" style="margin:auto" />
            <div class="carousel-caption">
                <h3 style="color:black">Keep your desk clean</h3>
            </div>

        </div>


    </div>



</div>

<div>

    <hr />
    <br />
    <br />
    <h1 style="margin:auto"><u>KEEP ON CONNECTING AND SHARING</u></h1>
    <div class="row">
        <div class="col-md-4">
            <h2>BUSINESS</h2>
            <img src="~/images/business.jpg" alt="upload logo" width="120">
            <p>
                Helps employees share documents from different parts of the world.
            </p>

        </div>
        <div class="col-md-4">
            <h2>STUDENTS</h2>
            <img src="~/images/students.jpg" alt="download logo" width="120">
            <p>
                Students can share school work faster.
            </p>

        </div>
        <div class="col-md-4">
            <h2>FAMILY & FRIENDS</h2>
            <img src="~/images/family.jpg" alt="search logo" width="120">
            <p>
                Family and friends can keep in touch
            </p>

        </div>
    </div>
</div>





