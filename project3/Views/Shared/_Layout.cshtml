    </div>*@

    

    <div class="navbar navbar-fixed-top " style="background-color: darkgray; color:black;" >
        <div class="container">
            <div class="navbar-header">
                
                    <img src="~/images/logo.png" alt="Connection world logo" width="100" style="float:left; ">
                


                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">

                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>
            <div class="navbar-collapse collapse" style="margin-top: auto">
                
                <ul class="nav navbar-nav">

                    

                    <li><a style="color:black;">@Html.ActionLink("Connect World", "Index", "Home")</a></li>
                    <li><a style="color:black;">@Html.ActionLink("About", "About", "Home")</a></li>
                    <li><a style="color:black;">@Html.ActionLink("Contact", "Contact", "Home")</a></li>


                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <br /><br />
    <hr />


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer >

        <p>&copy; @DateTime.Now.Year. All rights reserved. Powered by Connect World</p>

        </footer>
        
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
